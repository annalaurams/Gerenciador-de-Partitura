datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Score {
  id          String   @id @default(uuid())
  name        String
  instrument  String?
  tone        String?
  composer    String?
  description String?  @db.VarChar(100)
  filePath    String?  // ðŸ‘ˆ MUDOU DE fileName para filePath

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Composer {
  id        String   @id @default(uuid())
  name      String
  birthYear Int?
  country   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}